# Backend Development Dockerfile with PDM and Hot Reload
FROM python:3.12-slim

# Instalar dependências do sistema
RUN apt-get update && apt-get install -y \
    curl \
    gcc \
    g++ \
    git \
    && rm -rf /var/lib/apt/lists/*

# Instalar PDM
RUN pip install --no-cache-dir pdm

# Definir diretório de trabalho
WORKDIR /app

# Copiar arquivos de configuração do PDM
COPY backend/pyproject.toml backend/pdm.lock* ./

# Instalar dependências usando PDM (incluindo dev dependencies)
RUN pdm install --no-editable

# Expor a porta
EXPOSE 8000

# Definir variáveis de ambiente para desenvolvimento
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV UVICORN_RELOAD=1

# Comando para iniciar a aplicação em modo desenvolvimento
CMD ["pdm", "run", "uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload", "--reload-dir", "/app"] 